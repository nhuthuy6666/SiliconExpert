            {
                "key": "field_slider_content_button_url",
                "label": "Button URL Slider Content",
                "name": "button_url_slider_content",
                "type": "url",
                "required": 1,
                "default_value": "#"
            }
        ]
    },
    {
        "key": "field_slider_images",
        "label": "Slider Images",
        "name": "slider_images",
        "type": "gallery",
        "min": 1,
        "max": 3,
        "return_format": "array",
        "preview_size": "medium",
        "library": "all",
        "button_label": "Add Slider Images"
